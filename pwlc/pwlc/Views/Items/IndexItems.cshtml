@model IEnumerable<pwlc.Models.Item>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemQuantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemPrice)
        </td>
        <td>
            @Html.EditorFor(modelItem => item.ItemQuantity)
        </td>
        <td>
            @Html.ActionLink("Add To Invoice", "AddToInvoice", new { id=item.ItemId, quantity=item.ItemQuantity })
        </td>
    </tr>
}

</table>
